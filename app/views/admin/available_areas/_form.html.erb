<%= form_for [:admin, @available_area],  :html => {:class => 'col s12 classic-form' } do |f| %>
  <% if @available_area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@available_area.errors.count, "error") %> prohibited this available_area from being saved:</h2>

      <ul>
      <% @available_area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s6">
    	<i class="prefix mdi-maps-pin-drop"></i>
    	<%= f.text_field :name, placeholder: 'Ingresa el nombre' %>
    	<%= f.label :name, 'Nombre', :class=>'active' %>
    </div>
  </div>
  <div class="row actions">
            <div class="col s6 right-align">
                <%= link_to admin_available_areas_path, :class => 'waves-effect waves-light btn' do %>
                <i class="mdi-navigation-arrow-back"></i> Volver
                <% end %>
            </div>
            <div class="col s6">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    <i class="mdi-content-send right"></i> Crear
                </button>
            </div>
        </div>
<% end %>

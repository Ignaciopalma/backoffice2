<div class="form-container z-depth-3 col s2 offset-s5">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= devise_error_messages! %>

        <div class="row">
          <div class="row">
            <div class="col input-field s12">
              <%= f.email_field :email, autofocus: true, placeholder:"Ingresa tu correo" %>
              <%= f.label :email, "Correo",:class => 'active'  %>
            </div>
          </div>

          <div class="row">
            <div class="col input-field s12">
              <%= f.password_field :password, autocomplete: "off", placeholder:"Ingresa tu contrase単a (Min: 8)"  %>
              <%= f.label :password , "Contrase単a", :class => 'active'%>
            </div>
          </div>

          <div class="row">
            <div class="col input-field s12">
              <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder:"Repite tu contrase単a"%>
              <%= f.label :password_confirmation ,"Repetir contrase単a", :class => 'active' %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <%= f.label :sender_type, :class => 'active' %>
              <%= select(:sender, :sender_type, Sender.sender_types.map {|type| [I18n.t("activerecord.attributes.sender.#{type.first}"), type.first] }) %>
            </div>
          </div>

          <div class="col s12 actions">
            <button class="btn waves-effect waves-light" type="submit" name="action">Registrarse<i class="mdi-navigation-arrow-forward right"></i></button>
          </div>
        </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col s12">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('select').material_select();
  });
</script>

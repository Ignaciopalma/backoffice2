<div class="modal-form-container">
    <%= link_to image_tag("logotipo-veloexpress.svg"), root_path, class: "main-anchor" %>

    <div class="form-title">
        <h4><i class="mdi-action-wallet-travel"></i> Registrate como Sender!</h4> 
    </div>
    <div class="row-content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <%= devise_error_messages! %>

            <div class="email">
                <%= f.email_field :email, autofocus: true, placeholder:"Ingresa tu correo" %>
            </div>

            <div class="pass">
                <p>
                    <%= f.password_field :password, autocomplete: "off", placeholder:"Ingresa tu contraseña (Min: 8)", id: "password"  %>
                    <span class="hints min-pass">Debe contener minimo 8 Caracteres</span>
                </p>
            </div>

            <div class="confirm-pass">
                <p>
                    <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder:"Repite tu contraseña", id: "confirm-password" %>
                    <span class="hints match-pass">No coinciden las contraseñas!</span>
                </p>
            </div>

            <div class="select">
                <%= select(:sender, :sender_type, Sender.sender_types.map {|type| [I18n.t("activerecord.attributes.sender.#{type.first}"), type.first] }) %>
            </div>

            <div class="actions">
                <button id="submit" type="submit" name="action">Registrarse<i class="mdi-navigation-arrow-forward right"></i></button>
            </div>
        <% end %>
    </div>

    <div class="social-links">
        <%= render "devise/shared/links" %>
    </div>
</div>

